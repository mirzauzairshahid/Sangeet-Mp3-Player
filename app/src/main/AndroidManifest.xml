<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projects.SangeetMp3Player">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:resizeableActivity="false"
        android:icon="@mipmap/ic_sangeet_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sangeet_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayer">
        <activity android:name="com.projects.SangeetMp3Player.activity.SplashActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.projects.SangeetMp3Player.activity.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <service android:name="com.projects.SangeetMp3Player.services.OnClearFromRecentService"/>


        <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id"/>
    </application>

</manifest>